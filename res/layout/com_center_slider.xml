<SlidingDrawer 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/com_slider"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:topOffset="0dp" 
    android:handle="@+id/com_slide_handle"
    android:content="@+id/com_slide_content"
	android:layout_alignParentBottom="true"
>
  	<LinearLayout
	   android:layout_width="fill_parent"
	   android:layout_height="40dp"
       android:id="@+id/com_slide_handle"
       android:orientation="vertical"
	>
	    <View
	        android:layout_width="fill_parent"
	    	android:layout_height="2dp"  
	    	android:background="#5c5c5c"
	    />
	    <View
	        android:id="@+id/temp000"
	        android:layout_width="fill_parent"
	    	android:layout_height="1dp"  
	    	android:background="#20201f"
	    />
	    <TextView
	        android:id="@+id/com_slide_handle_text"
	        android:layout_width="fill_parent"
	        android:layout_height="37dp"
	        android:background="@drawable/gradient_greytodarkgrey"
	    	android:text="COM CENTER (0 ONLINE)"
	    	android:textColor="#FFFFFF"
	    	android:gravity="center"
	    />
	</LinearLayout>
	<RelativeLayout 
		android:id="@+id/com_slide_content"  
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#FDFDFD"
	>	    
		<Button
	    	android:id="@+id/button_refresh" 
			android:layout_width="fill_parent"
			android:layout_height="40dp"
	     	android:text="Refresh now"
	     	android:background="@drawable/gradient_greytodarkgrey"
	     	android:textColor="#FFFFFF"
	    	android:gravity="center"
	     	android:layout_alignParentBottom="true"
	     	android:onClick="onClick"
	     />
		<TextView 
		    android:id="@+id/text_empty_com"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="No friends found. :-("
			android:layout_centerInParent="true"
			android:visibility="gone"
	    />
	    <View 
			android:id="@+id/topalign"  
			android:layout_width="fill_parent"
			android:layout_height="0dp"
		/>
	    <RelativeLayout
	    	android:id="@+id/wrap_friends_requests"  
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
		>
			<TextView
			    style="@style/FriendHeadingRow"
				android:id="@+id/header_friends_requests"
				android:text="Friend requests"
	    	/>
		    <ListView
		    	android:id="@+id/list_requests"  
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/header_friends_requests"
		    />
	    </RelativeLayout>
	    <View 
			android:id="@+id/centeralign"  
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_below="@id/wrap_friends_requests"
			android:layout_alignWithParentIfMissing="@id/topalign" 
		/>
	   <ListView
	    	android:id="@+id/list_friends"  
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_alignWithParentIfMissing="@id/topalign"
			android:layout_above="@id/button_refresh"
			android:layout_below="@id/wrap_friends_requests"
			android:fastScrollEnabled="true"
	    />
	</RelativeLayout>
</SlidingDrawer>