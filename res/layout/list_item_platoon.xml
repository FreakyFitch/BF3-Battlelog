<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
>
	<ImageView
	  	android:id="@+id/image_badge"
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:src="@drawable/testimg_platoon"
	  	android:layout_alignParentLeft="true"
	  	android:scaleType="center"
    	android:paddingTop="4dp"
	/>
	<TextView 
	    android:id="@+id/text_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:text="Non-Turbined Zebras"
		android:textSize="16sp"
		android:layout_toRightOf="@id/image_badge"
		android:layout_marginLeft="5dp"
	/>
	<TextView
		android:id="@+id/text_tag"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:text="[NTZ]"
		android:textSize="16sp"
		android:layout_toRightOf="@id/text_name"
		android:layout_alignBaseline="@id/text_name"
		android:layout_marginLeft="5dp"
	/>
	<TextView
	    android:id="@+id/string000"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:text="Number of members:"
		android:layout_below="@id/text_name"
		android:layout_toRightOf="@id/image_badge"
		android:layout_marginLeft="5dp"
	/>
	<TextView
	    android:id="@+id/text_members"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:text="10"
		android:layout_below="@id/text_name"
		android:layout_toRightOf="@id/string000"
		android:layout_marginLeft="5dp"
	/>
	<TextView
	    android:id="@+id/string100"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:text="Number of fans:"
		android:layout_below="@id/string000"
		android:layout_toRightOf="@id/image_badge"
		android:layout_marginLeft="5dp"
	/>
	<TextView
	    android:id="@+id/text_fans"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:text="100"
		android:layout_below="@id/string000"
		android:layout_toRightOf="@id/string100"
		android:layout_marginLeft="5dp"
	/>
</RelativeLayout>