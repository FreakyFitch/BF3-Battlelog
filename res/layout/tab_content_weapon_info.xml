<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
>		
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:padding="10dp"
	>		
		<ImageView
		    android:id="@+id/image_item"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
			android:src="@drawable/assignment_01_u"
			android:scaleType="centerInside"
			android:layout_centerHorizontal="true"
		/>
		<TextView 
		   	style="@style/InfoHeading"
		    android:id="@+id/text_title"
		    android:text="FAMAS"
	    	android:padding="5dp"
	    	android:layout_below="@id/image_item"
	    />
		<TextView 
		   	android:id="@+id/text_desc"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="M40A3 is a neat gun. I can't quite remember if it's actually in BF3, but atleast I've seen it in Call of Duty: Modern Warfare."
	    	android:padding="5dp"
	    	android:layout_below="@id/text_title"
	    />
		<TextView 
		   	style="@style/InfoHeading"
		    android:id="@+id/text_specs"
		    android:text="Specifications"
	    	android:padding="5dp"
	    	android:layout_below="@id/text_desc"
	    />
		<TextView 
		   	android:id="@+id/text_specs_content"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Ammo: 4000 mm AP"
	    	android:padding="5dp"
	    	android:layout_below="@id/text_specs"
	    />
	</RelativeLayout>
</ScrollView>